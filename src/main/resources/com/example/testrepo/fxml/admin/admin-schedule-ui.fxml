<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="523.0" prefWidth="690.0" styleClass="admin-main-bg-body" stylesheets="@../../css/admin.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testrepo.controllers.admin.adminScheduleController">
   <children>
      <AnchorPane prefHeight="193.0" prefWidth="690.0">
         <children>
            <VBox layoutX="15.0" layoutY="15.0" styleClass="dashboard-container" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ComboBox fx:id="selectMovieComboBox" prefHeight="25.0" prefWidth="183.0" promptText="Select Movie" />
                        <DatePicker fx:id="screenDatePicker" promptText="Screen Date" />
                        <TextField fx:id="startTimeTextField" promptText="Start Time" />
                        <TextField fx:id="endTimeTextField" promptText="End Time" />
                        <ComboBox fx:id="screenRoomComboBox" prefHeight="25.0" prefWidth="190.0" promptText="Screen Room" />
                        <TextField fx:id="seatsTextField" promptText="No. Seats" />
                        <Spinner fx:id="ticketPriceSpinner" />
                     </children>
                  </HBox>
                  <AnchorPane>
                     <children>
                        <Label fx:id="scheduleErrorLabel" prefHeight="17.0" prefWidth="28.0" textFill="RED" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="dashboard-container" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
               <children>
                  <TableView fx:id="scheduleTableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="movieNameColumn" prefWidth="75.0" text="Movie Title" />
                      <TableColumn fx:id="screenDateColumn" prefWidth="75.0" text="Screen Date" />
                        <TableColumn fx:id="startTimeColumn" prefWidth="75.0" text="Start Time" />
                        <TableColumn fx:id="endTimeColumn" prefWidth="75.0" text="End Time" />
                        <TableColumn fx:id="screenRoomColumn" prefWidth="75.0" text="Screen Room" />
                        <TableColumn fx:id="seatsColumn" prefWidth="75.0" text="Available Seats" />
                        <TableColumn fx:id="ticketPriceColumn" prefWidth="75.0" text="Ticket Price" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addSchedule" text="add" />
                        <Button mnemonicParsing="false" text="delete" />
                        <Button mnemonicParsing="false" text="edit" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</VBox>

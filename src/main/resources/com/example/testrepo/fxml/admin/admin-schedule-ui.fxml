<VBox fx:id="parentVBox" prefHeight="523.0" prefWidth="690.0" styleClass="admin-main-bg-body" stylesheets="@../../css/admin.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testrepo.controllers.admin.adminScheduleController">
   <children>
      <AnchorPane prefHeight="126.0" prefWidth="690.0">
         <children>
            <VBox layoutX="15.0" layoutY="15.0" prefHeight="109.0" prefWidth="660.0" styleClass="dashboard-container" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
               <children>
                  <StackPane>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                     <children>
                        <AnchorPane>
                           <children>
                              <Label fx:id="scheduleErrorLabel" alignment="CENTER" prefHeight="20.0" prefWidth="134.0" textFill="RED" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                           </children>
                        </AnchorPane>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <children>
                              <ComboBox fx:id="selectMovieComboBox" prefHeight="25.0" prefWidth="183.0" promptText="Select Movie" styleClass="custom-combo-box" />
                              <DatePicker fx:id="screenDatePicker" promptText="Screen Date" styleClass="custom-date-picker" />
                              <TextField fx:id="startTimeTextField" promptText="Start Time" styleClass="input-text-field" />
                              <TextField fx:id="endTimeTextField" promptText="End Time" styleClass="input-text-field" />
                              <ComboBox fx:id="screenRoomComboBox" prefHeight="25.0" prefWidth="190.0" promptText="Screen Room" style="-fx-text-base-color: white;" styleClass="custom-combo-box" />
                              <TextField fx:id="seatsTextField" promptText="No. Seats" styleClass="input-text-field" />
                              <Spinner fx:id="ticketPriceSpinner" editable="true" styleClass="custom-spinner" />
                           </children>
                        </HBox>
                     </children>
                  </StackPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" styleClass="dashboard-container" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0">
               <children>
                  <HBox alignment="CENTER_RIGHT" prefHeight="51.0" prefWidth="640.0" spacing="10.0" styleClass="button-container">
                     <children>
                        <Button id="add-btn" fx:id="addScheduleButton" mnemonicParsing="false" onAction="#addSchedule" prefHeight="27.0" prefWidth="63.0" styleClass="action-button" text="Add" />
                        <Button id="delete-btn" fx:id="deleteScheduleButton" mnemonicParsing="false" onAction="#deleteSchedule" prefHeight="27.0" prefWidth="62.0" styleClass="action-button" text="Delete" />
                        <Button id="edit-btn" fx:id="editScheduleButton" mnemonicParsing="false" onAction="#editSchedule" prefHeight="27.0" prefWidth="58.0" styleClass="action-button" text="Edit" />
                     </children>
                     <VBox.margin>
                        <Insets left="15.0" right="15.0" top="15.0" />
                     </VBox.margin>
                  </HBox>
                  <TableView fx:id="scheduleTableView" prefHeight="259.0" prefWidth="629.0" styleClass="schedule-table" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="movieNameColumn" prefWidth="176.0" text="Movie Title" />
                      <TableColumn fx:id="screenDateColumn" prefWidth="69.0" text="Screen Date" />
                        <TableColumn fx:id="startTimeColumn" prefWidth="75.0" text="Start Time" />
                        <TableColumn fx:id="endTimeColumn" prefWidth="75.0" text="End Time" />
                        <TableColumn fx:id="screenRoomColumn" prefWidth="75.0" text="Room" />
                        <TableColumn fx:id="seatsColumn" prefWidth="75.0" text="Seats" />
                        <TableColumn fx:id="ticketPriceColumn" prefWidth="75.0" text="Ticket Price" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</VBox>
